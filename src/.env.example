# Environment variables for LLM Resume Parser
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="LLM Resume Parser"
APP_VERSION="2.0.0"
ENVIRONMENT="development"

# LLM Provider Settings
LLM_PROVIDER="ollama" # Possible values: huggingface, openai, ollama
LLM_MODEL_NAME="phi3:mini"
LLM_TEMPERATURE=0.0000000001
LLM_MAX_TOKENS=2048
LLM_TIMEOUT_SECONDS=120

USE_LOCAL_LLM=True

# HuggingFace Settings
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=""

# OpenAI Settings (for future use)
OPENAI_API_KEY=""

# Ollama Settings
OLLAMA_API_URL="http://localhost:11434"
OLLAMA_API_KEY=""

EXTRACTION_ATTRIBUTES='["Name", "Email"]' #, "Phone Number", "Address", "Objective", "Skills", "Employment History", "Education History", "Accomplishments"]'

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_BACKEND="memory" # Possible values: memory

# Retry Settings
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0
RETRY_INITIAL_WAIT_SECONDS=1.0

# File Processing Settings
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS='["pdf", "docx", "txt"]'
FAIL_FAST_FOR_BATCH=True

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_ROTATION_SIZE_MB=10

