# Environment variables for LLM Resume Parser
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="LLM Resume Parser"
APP_VERSION="2.0.0"
ENVIRONMENT="development"

# LLM Provider Settings
LLM_PROVIDER="huggingface"
LLM_MODEL_NAME="google/flan-t5-large"
LLM_TEMPERATURE=0.0000000001
LLM_MAX_TOKENS=2048
LLM_TIMEOUT_SECONDS=120

# HuggingFace Settings
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACEHUB_API_TOKEN=""
# Alternative env var name
HF_API_TOKEN=""
# Set to true to use local model, false to use API
HUGGINGFACE_USE_LOCAL=true

# OpenAI Settings (for future use)
OPENAI_API_KEY=""

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_BACKEND="memory"
# REDIS_URL="redis://localhost:6379/0"

# Retry Settings
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0
RETRY_INITIAL_WAIT_SECONDS=1.0

# File Processing Settings
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS=["pdf", "docx", "txt"]

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="json"
# LOG_FILE_PATH="logs/parser.log"
LOG_ROTATION_SIZE_MB=10

